@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
   
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Araç Kiralama Formu</h3>
       
        <br />
        
            <input type="hidden" asp-for="CarID"  value="@ViewBag.v3" class="form-control"  placeholder="Almak İstediğniz Araba">
       
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" asp-for="Name" class="form-control" >
        </div>
        <label>Soyadınız</label>
        <div class="form-group">
            <input type="text" asp-for="Surname" class="form-control">
        </div>
        <div class="form-group">
            <label>Mail Adresi</label>
            <input type="email" asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label>Telefon Numarası</label>
            <input type="text" asp-for="Phone" class="form-control">
        </div>
        <div class="form-group">
            <label>Alınmak İstenilen Lokasyon</label>
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>İade Etmek İstediğiniz Lokasyon</label>
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Yaşınız</label>
            <input type="text" asp-for="Age" class="form-control">
        </div>
        <div class="form-group">
            <label>Ehliyet Yılınız</label>
            <input type="text" asp-for="DriverLicenseYear" class="form-control">
        </div>
        <div class="form-group">
            <label>Varsa Eklemek İstedikleriniz</label>
            <textarea asp-for="Description" id="" cols="30" rows="7" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

