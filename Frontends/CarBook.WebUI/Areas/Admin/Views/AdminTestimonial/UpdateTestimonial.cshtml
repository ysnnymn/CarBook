@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Referans Veri Güncelleme Alanı.</h4>
                        <p class="card-subtitle mb-4">  Referanslara Ait Veri Güncellemelerini Burdan Yapabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad-Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder=" Referans Ad-Soyad Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Bilgisini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Resmi</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Referans Resmi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Referans Yorumu</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Referans Yorumu Giriniz"></textarea>

                            </div>



                            <button type="submit" class="btn btn-success waves-effect waves-light">Referans Bilgisini Güncelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>











