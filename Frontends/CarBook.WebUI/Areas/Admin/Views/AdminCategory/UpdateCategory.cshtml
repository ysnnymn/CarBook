@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Kategori Güncelleme Alanı</h4>
                        <p class="card-subtitle mb-4"> Kategori Alanına Ait Veri Girişi Güncellemyi Aşağıdan Yapabilirsiniz..</p>

                        <form method="post">
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Details" placeholder="Kategori AdıGiriniz">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategori'yi Günccelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>

