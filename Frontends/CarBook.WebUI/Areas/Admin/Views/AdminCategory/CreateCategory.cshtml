@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Kategori Giriş Alanı</h4>
                        <p class="card-subtitle mb-4"> Kategori Alanına Veri Girişi Yapabilirsiniz.</p>

                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Details" placeholder="Kategori Adı Giriniz">
                            </div>
                           


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategori'yi Kaydet </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>

