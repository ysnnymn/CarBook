@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hakkımızda Veri Girişi ALanı.</h4>
                        <p class="card-subtitle mb-4"> Ana Sayfanın ve Hakkımızda Sayfasının Hakkımda Bulunan Alanını Aşağıdan Düzenleybilirsiniz.</p>

                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" asp-for="Description" class="form-control" placeholder="Açıklamayı Giriniz"></textarea>
                               
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Linkini Giriniz">
                           </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda'yı Kaydet </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>

