@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Sayfası Veri Düzenleme Alanı.</h4>
                        <p class="card-subtitle mb-4">  Sosyal Medya Hesaplarınıza Ait Veri Düzenlemelerini Burdan Yapabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Başlığını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">Url</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medya Sayfanızın Url Bilgisini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Hizmet Ikon Url</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya Ikon Url Giriniz">
                            </div>



                            <button type="submit" class="btn btn-success waves-effect waves-light">Sosyal Medya Bilgisini Güncelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>









