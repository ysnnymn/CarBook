@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Veri Girişi ALanı.</h4>
                        <p class="card-subtitle mb-4"> Yazar Alanını Aşağıdan Düzenleybilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="AuthorId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Yazar Ad-Soyad Giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <textarea rows="5" asp-for="Description" class="form-control" placeholder="Açıklamayı Giriniz"></textarea>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Linkini Giriniz">


                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazar'ı Güncelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>

