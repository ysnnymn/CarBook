@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Adres Bilgisi Girişi.</h4>
                        <p class="card-subtitle mb-4"> Adres Alanına Ait Bilgileri Aşağıdaki Panelden Girebilrisiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="FooterAddressID" />
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address" placeholder="Adres Bilgisini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon Numarası</label>
                                <input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone" placeholder="Telefon Numarası Giriniz.">

                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail">Email</label>
                                <input type="email" class="form-control" id="exampleInputEmail" asp-for="Email" placeholder="Email Numarası Giriniz.">

                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz.">

                            </div>




                            <button type="submit" class="btn btn-primary waves-effect waves-light">Adresi Güncelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>

