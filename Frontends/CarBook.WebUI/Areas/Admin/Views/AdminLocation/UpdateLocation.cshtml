@model UpdateLocationDto
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Lokasyon Veri Girişi ALanı.</h4>
                        <p class="card-subtitle mb-4"> Araçların Alındığı Ve Teslim Edildiği Noktalalara Ait Lokasyon Bilgisinin Girilidiği Sayfadır.</p>

                        <form method="post">
                            <input type="hidden"  asp-for="LocationID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Lokasyon Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyon Adı Giriniz">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Lokasyon Bilgisini Güncelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>





