@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">


        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title"> Banner Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Banner Alanına Veri Girişini Aşağıdaki Panelden Yapabilirsiniz.</p>

                        <form method="post">
                            <input type="hidden" asp-for="BannerID" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklamayı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklaması Giriniz">
                            </div> <div class="form-group">
                                <label for="exampleInputVideoUrl">Vide Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Vide Url Giriniz">
                            </div>



                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner'ı Güncelle </button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>
</div>

